<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Required for API 29 and below, legacy external storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>

    <!-- Required for API 30 and above -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/application"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/PagerTheme">
        <activity android:name="net.inbox.About"/>
        <activity android:name="net.inbox.AppPreferences"/>
        <activity
            android:name="net.inbox.InboxPager"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="net.inbox.InboxMessage"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name="net.inbox.InboxPreferences"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name="net.inbox.InboxSend"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name="net.inbox.visuals.SendFilePicker"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name="net.inbox.InboxGPG"
            android:label="OpenPGP"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- Required for FileProvider -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

    <queries>
        <!-- Permission to check for installed Open Keyhcain GPG application, for GPG -->
        <package android:name="org.sufficientlysecure.keychain"/>
    </queries>

</manifest>

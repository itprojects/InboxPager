<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270sp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:autofillHints="@string/empty_string"
        android:text="@string/crypto_plain_warning" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Spinner
            android:id="@+id/spin_cipher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:spinnerMode="dropdown"
            android:padding="0dp"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:backgroundTint="@color/color_orange"
            android:background="@drawable/spinner_transparent"/>

        <Spinner
            android:id="@+id/spin_cipher_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:spinnerMode="dropdown"
            android:padding="0dp"
            android:dropDownWidth="wrap_content"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:backgroundTint="@color/color_orange"
            android:background="@drawable/spinner_transparent"/>

        <Spinner
            android:id="@+id/spin_cipher_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:spinnerMode="dropdown"
            android:padding="0dp"
            android:dropDownWidth="wrap_content"
            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:backgroundTint="@color/color_orange"
            android:background="@drawable/spinner_transparent"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="@string/crypto_key_pw"
        android:autofillHints="@string/empty_string"
        android:inputType="textPassword|textNoSuggestions"
        android:maxLines="1"
        android:maxLength="32"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="0sp">

        <CheckBox
            android:id="@+id/cb_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="0sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/sett_change_pw_vis"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="0sp"
            android:layout_marginEnd="10sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/crypto_key_32_symbols"
            tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

</LinearLayout>

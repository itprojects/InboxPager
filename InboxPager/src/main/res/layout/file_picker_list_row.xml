<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView android:id="@+id/pick_type"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingStart="4dp"/>

    <TextView android:id="@+id/pick_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pick_type"
        android:layout_toStartOf="@id/pick_size"
        android:layout_centerVertical="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:ellipsize="middle"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"
        android:textSize="@dimen/text_size_message_item" />

    <TextView android:id="@+id/pick_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pick_type"
        android:layout_toStartOf="@id/pick_size"
        android:layout_below="@id/pick_file_name"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:ellipsize="middle"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:visibility="gone"/>

    <TextView android:id="@+id/pick_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/pick_action"
        android:layout_centerVertical="true"
        android:paddingStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/dottz"
        android:maxLines="1"
        android:textSize="@dimen/text_size_message_item_subtitle" />

    <ImageView android:id="@+id/pick_action"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="4dp"
        android:src="@drawable/attachment" />

</RelativeLayout>

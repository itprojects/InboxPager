<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/inbox_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        android:layout_toStartOf="@+id/inbox_list_count"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_title"
        android:textSize="@dimen/text_size_inbox_item"/>

    <TextView
        android:id="@+id/inbox_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:padding="4sp"
        android:fontFamily="@font/dottz_type"
        android:maxLines="1"
        android:fallbackLineSpacing="false"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/counter_rounded"
        android:textColor="@color/color_home_bar_background"
        android:textSize="@dimen/text_size_inbox_item"
        android:visibility="gone"/>

    <!-- fallbackLineSpacing corrects the TextView extra height space issue on API >= 33 -->

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view_file_picker_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- fallbackLineSpacing corrects the TextView extra height space issue on API >= 33 -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/picker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_home_bar_background"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/tv_picker_save"
            style="@style/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="7sp"
            android:background="@drawable/btn_green"
            android:fallbackLineSpacing="false"
            android:textAllCaps="true"
            android:text="@string/message_action_done"/>

        <TextView
            android:id="@+id/tv_picker_select"
            style="@style/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="7sp"
            android:background="@drawable/btn_orange"
            android:fallbackLineSpacing="false"
            android:text="@string/picker_pick"/>

        <TextView
            android:id="@+id/picker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:fallbackLineSpacing="false"
            android:fontFamily="@font/dottz"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:paddingLeft="0sp"
            android:paddingTop="4sp"
            android:paddingRight="0sp"
            android:paddingBottom="4sp"
            android:shadowColor="@color/color_title"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textColor="@color/color_title"
            android:visibility="visible"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_location"
        style="@style/action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:background="@color/color_home_bar_background"
        android:fallbackLineSpacing="false"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/list_view_picked_attachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:visibility="visible"/>

</LinearLayout>
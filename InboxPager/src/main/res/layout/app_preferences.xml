<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- fallbackLineSpacing corrects the TextView extra height space issue on API >= 33 -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_preferences_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_home_bar_background"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <TextView
            android:id="@+id/app_preferences_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fallbackLineSpacing="false"
            android:fontFamily="@font/dottz"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:paddingTop="4sp"
            android:shadowColor="@color/color_title"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="@string/menu_preferences"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textColor="@color/color_title"
            android:visibility="visible" />

    </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/app_preferences_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>